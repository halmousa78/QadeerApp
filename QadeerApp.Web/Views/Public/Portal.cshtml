    <section id="features" class="service-section pt-150">
        <div class="container">
                        <h1 class="wow fadeInUp" data-wow-delay=".2s">@(isRtl ? "نظام الجودة الإلكتروني قدير" : "Qadeer e-Quality System")</h1>
                <div class="col-lg-10">
                    <div class="section-title text-center">
                        <h1 class="mb-20 wow fadeInUp primary-title" data-wow-delay=".2s">@text.CalendarTitle</h1>
                        <div class="title-accent wow fadeInUp" data-wow-delay=".25s"></div>
                        <div class="wow fadeInUp mt-3 today-inline" data-wow-delay=".3s">
                            <i class="lni lni-calendar"></i>
                            <span>@text.TodayLabel</span>
                        </div>
                        @if (!string.IsNullOrWhiteSpace(text.CalendarSubtitle))
                        {
                            <p class="mb-40 wow fadeInUp" data-wow-delay=".4s">@text.CalendarSubtitle</p>
                        }
                    </div>
                </div>
            </div>

            @if (Model?.HasCalendar ?? false)
            {
                <div class="row equal-cards">
                    @foreach (var week in Model.Weeks)
                    {
                        var weekStart = week.Days.FirstOrDefault()?.Date ?? DateTime.MinValue;
                        var weekEnd = week.Days.LastOrDefault()?.Date ?? weekStart;
                        var weekRange = $"{weekStart.ToString("dd/MM", culture)} - {weekEnd.ToString("dd/MM/yyyy", culture)}";
                        <div class="col-xl-4 col-md-6">
                            <div class="single-service calendar-card">
                                <div class="icon"><i class="lni lni-calendar"></i></div>
                                <div class="content">
                                    <div class="calendar-meta">
                                        <span class="week-pill">@weekLabel(week.WeekNumber)</span>
                                        <span class="week-range">@weekRange</span>
                                    </div>
                                    <ul class="week-days">
                                        @foreach (var day in week.Days)
                                        {
                                            var dayName = day.Date.ToString("dddd", culture);
                                            var dayDate = day.Date.ToString("dd/MM/yyyy", culture);
                                            var noteLabel = day.NoteTitle ?? day.NoteText ?? "";
                                            var isToday = day.Date.Date == DateTime.Today;
                                            <li class="@(string.IsNullOrWhiteSpace(noteLabel) ? "" : "has-note") @(isToday ? "today" : "")">
                                                <span class="day-name">@dayName</span>
                                                <span class="day-date">
                                                    @dayDate
                                                    @if (!string.IsNullOrWhiteSpace(noteLabel))
                                                    {
                                                        <span class="note-dot" title="@noteLabel"></span>
                                                    }
                                                </span>
                                            </li>
                                            @if (isToday)
                                            {
                                                <div class="today-badge">
                                                    <i class="lni lni-calendar"></i>
                                                    <span>@text.TodayLabel</span>
                                                </div>
                                            }
                                            if (!string.IsNullOrWhiteSpace(noteLabel))
                                            {
                                                <div class="note-badge">
                                                    <i class="lni lni-flag"></i>
                                                    <span>@text.NoteLabel: @noteLabel</span>
                                                </div>
                                            }
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                @if (Model.Breaks.Any())
                {
                    <div class="row pt-60">
                        <div class="col-12">
                            <h4 class="mb-20">@text.BreakLabel</h4>
                        </div>
                        @foreach (var br in Model.Breaks)
                        {
                            var range = $"{br.StartDate.ToString("dd/MM/yyyy", culture)} - {br.EndDate.ToString("dd/MM/yyyy", culture)}";
                            <div class="col-lg-4 col-md-6 mb-3">
                                <div class="break-card">
                                    <div class="break-title"><i class="lni lni-plane"></i><span>@br.Title</span></div>
                                    <div class="break-dates">@range</div>
                                </div>
                            </div>
                        }
                    </div>
                }
            }
            else
            {
                <div class="row justify-content-center">
                    <div class="col-lg-8">
                        <div class="single-service calendar-card text-center" style="padding: 24px;">
                            <div class="content">
                                <h4>@text.NoCalendar</h4>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>

    <section id="about" class="about-section pt-150">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-10">
                    <div class="section-title text-center" style="margin-bottom: 32px;">
